{
  // start of path dependent configuration
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    // end of path dependent configuration
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    // lint options
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true

    // test options
    // I added it so that IDE recognized test & expect, but with it, it ignores other types , eg. @types/node
    // now test/expect work fine without it. A bug fixed in webstorm 2019.1.1?
    //    "types": [
    //      "@types/jest"
    //    ]
  }
}
