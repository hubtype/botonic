{
  "extends": "../tsconfig",
  // include need to be specified for running tsc on tests
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "rootDir": "../",
    // Options below are for compiling @botonic js/jsx files
    "allowJs": true, //when set, jest does not validate types anymore
    "declaration": false,
    "declarationDir": null
  }
}
