    "build:webchat": "yarn workspace webchat build",
    "deploy": "yarn bt deploy",
    "destroy": "yarn bt destroy"
  },
  "workspaces": {
    "packages": [
      "api",
      "bot",
      "webchat",
      "webviews"
    ]
  },
  "devDependencies": {
    "@botonic/dx": "dev",
    "@botonic/cli": "dev"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.15"
  }
