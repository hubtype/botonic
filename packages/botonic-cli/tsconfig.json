{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "include": [".*.js", "*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["templates", "tests", "lib"]
}
