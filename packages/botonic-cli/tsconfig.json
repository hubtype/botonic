{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "outDir": "lib",
    "rootDir": "src",
    "strict": false,
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./src/types/**/*"],
  "exclude": ["templates", "dist", "lib"],
  "ts-node": {
    "esm": true
  }
}
