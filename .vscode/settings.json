{
  // Use Biome as formatter for migrated packages
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // YAML formatting with single quotes
  "yaml.format.singleQuote": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  // Organize imports on save (Biome analyzer, not formatter)
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  }
}
